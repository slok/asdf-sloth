#!/usr/bin/env bash

releases_path='https://api.github.com/repos/slok/sloth/releases?per_page=100'

if [ -n "${GITHUB_API_TOKEN}" ]; then
  header="-H 'Authorization: token ${GITHUB_API_TOKEN}'"
else
  header=''
fi

cmd="curl -q ${header} -s ${releases_path}"

function sort_versions() {
  sed 'h; s/[+-]/./g; s/.p\([[:digit:]]\)/.z\1/; s/$/.z/; G; s/\n/ /' |
    LC_ALL=C sort -t. -k 1,1 -k 2,2n -k 3,3n -k 4,4n -k 5,5n | awk '{print $2}'
}

versions=$(eval "$cmd" | grep -oE "tag_name\": \"v.{1,15}\"," | sed 's/tag_name\": \"v//;s/\",//' | sort_versions)
# shellcheck disable=SC2086
echo ${versions}
